<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_userProfileImg"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/text_userNickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="닉네임"  />
        <TextView
            android:id="@+id/text_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="작성일"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="제목"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:singleLine="true"
        android:id="@+id/text_title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:visibility="visible"
        android:id="@+id/image_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내용"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/text_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="@string/board_btn_like"
            android:focusable="false"
            android:background="@drawable/btn_white_border"
            android:drawableLeft="@drawable/icon_like"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/btn_like" />
        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="@string/board_btn_share"
            android:focusable="false"
            android:background="@drawable/btn_white_border"
            android:drawableLeft="@drawable/icon_share"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/btn_share" />
    </LinearLayout>
</LinearLayout>
